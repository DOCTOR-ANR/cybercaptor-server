<?xml version="1.0" encoding="UTF-8"?>

<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="Github Maven Plugins"
         xmlns="http://maven.apache.org/DECORATION/1.0.0"
         xsi:schemaLocation="http://maven.apache.org/DECORATION/1.0.0 http://maven.apache.org/xsd/decoration-1.0.0.xsd">
    <bannerLeft>
        <name>CyberCAPTOR Server</name>
        <href>https://github.com/fiware-cybercaptor/cybercaptor-server</href>
    </bannerLeft>

    <skin>
        <groupId>org.apache.maven.skins</groupId>
        <artifactId>maven-fluido-skin</artifactId>
        <version>1.3.0</version>
    </skin>
    <custom>
        <fluidoSkin>
            <topBarEnabled>false</topBarEnabled>
            <sideBarEnabled>true</sideBarEnabled>

            <gitHub>
                <projectId>fiware-cybercaptor/cybercaptor-server</projectId>
                <ribbonOrientation>right</ribbonOrientation>
                <ribbonColor>black</ribbonColor>
            </gitHub>
        </fluidoSkin>
    </custom>

    <body>
        <head>
            <link rel="stylesheet" href="site.css" type="text/css"/>
        </head>

        <menu name="CyberCAPTOR Server">
            <item name="About" href="index.html"/>
            <item name="API Documentation" href="/apidocs/index.html"/>
        </menu>

        <menu ref="reports"/>
    </body>
</project>